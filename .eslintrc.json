{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["autofix", "import"],
  "rules": {
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        ".ts": "never",
        ".tsx": "never",
        ".js": "never",
        ".jsx": "never",
        ".mjs": "never"
      }
    ]
  }
}
